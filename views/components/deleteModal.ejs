<section id="modal">
  <div id="card">
    <div id="head">
      <h2>Confirm delete account</h2>

      <% if(admin) { %>
        <a
        id="close"
        href="/admin/<%= user.firstName %><%= user.lastName %>/settings"
        ><i class="material-icons">close</i></a
      >
      <% } else { %>
        <a
        id="close"
        href="/user/<%= user.firstName %><%= user.lastName %>/settings"
        ><i class="material-icons">close</i></a
      >
      <% } %>

      


    </div>
    <hr />

    <p>Do you really want to delete your account?</p>
    <div id="btns">

      <% if(admin) { %>
        <a
        id="btnNot"
        href="/admin/<%= user.firstName %><%= user.lastName %>/settings"
        >No</a
      >
      <% } else { %>
        <a
        id="btnNot"
        href="/user/<%= user.firstName %><%= user.lastName %>/settings"
        >No</a
      >
      <% } %>
      
      <a id="btnYes" href="/user/<%= user.firstName %><%= user.lastName %>/<%= id %>/deleteAccount">Yes </a>

      
    </div>
  </div>
</section>
